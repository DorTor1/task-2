{
  "name": "api_gateway",
  "version": "1.0.0",
  "description": "API Gateway для системы управления задачами",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "prod": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --passWithNoTests"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.1",
    "pino-http": "^8.6.1",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}

